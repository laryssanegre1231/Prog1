program MultiplosSeteNaoPar;

uses crt;

var
  num: Integer;

begin
  clrscr;
  writeln('Digite uma sequencia de numeros inteiros (0 para terminar):');
  
  repeat
    readln(num);
    if (num <> 0) and ((num mod 7 = 0) and (num mod 2 <> 0)) then
      writeln('Numero valido: ', num);
  until num = 0;

  writeln('Fim do programa.');
  readln;
end.